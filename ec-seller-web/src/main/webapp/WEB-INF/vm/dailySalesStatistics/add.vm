#set($title="添加每日销售统计")
#set($menu=3)
#parse("/WEB-INF/vm/common/head.vm")
<div class="container">
    #parse("/WEB-INF/vm/common/top.vm")
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">统计日期：</span>
                    <input type="date" id="date" name="date" class="form-control" value="">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">时区：</span>
                    <select id="timeInterval" name="timeInterval">
                        <option value="1">上午</option>
                        <option value="2">下午</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">总销售金额：</span>
                    <input type="number" id="totalSalesPrice" name="totalSalesPrice" class="form-control" value="">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">总现金收入：</span>
                    <input type="number" id="totalCashPrice" name="totalCashPrice" class="form-control" value="">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">现金消费金额：</span>
                    <input type="number" id="cashSalesPrice" name="cashSalesPrice" class="form-control" value="">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">会员卡消费金额：</span>
                    <input type="number" id="cardSalesPrice" name="cardSalesPrice" class="form-control" value="">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">pos机消费金额：</span>
                    <input type="number" id="posSalesPrice" name="posSalesPrice" class="form-control" value="">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">现金办理会员卡金额：</span>
                    <input type="number" id="cashBuyCardPrice" name="cashBuyCardPrice" class="form-control" value="">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">刷卡办理会员卡金额：</span>
                    <input type="number" id="posBuyCardPrice" name="posBuyCardPrice" class="form-control" value="">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">采购备注：</span>
                    <input id="remark" name="remark" type="text" class="form-control" value="">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" onclick="doSubmit();" class="btn btn-default">提交</button>
                </div>
            </div>

        </div>

    </div>
</div>

<script type="application/javascript">
    function doSubmit(){
        var date = $("#date").val();
        var timeInterval = $("#timeInterval").val();

        var totalSalesPrice=$("#totalSalesPrice").val();
        var totalCashPrice=$("#totalCashPrice").val();
        var cashSalesPrice=$("#cashSalesPrice").val();
        var cardSalesPrice=$("#cardSalesPrice").val();
        var posSalesPrice=$("#posSalesPrice").val();
        var cashBuyCardPrice=$("#cashBuyCardPrice").val();
        var posBuyCardPrice=$("#posBuyCardPrice").val();
        var remark=$("#remark").val();

        if(!date){
            alert("日期不能为空");
            return;
        }
        var params = "date="+date + "&timeInterval=" + timeInterval

        if(totalSalesPrice){
           params += "&totalSalesPrice=" + totalSalesPrice*100;
        }
        if(totalCashPrice){
            params += "&totalCashPrice=" + totalCashPrice*100;
        }
        if(cashSalesPrice){
            params += "&cashSalesPrice=" + cashSalesPrice*100;
        }
        if(cardSalesPrice){
            params += "&cardSalesPrice=" + cardSalesPrice*100;
        }
        if(posSalesPrice){
            params += "&posSalesPrice=" + posSalesPrice*100;
        }
        if(cashBuyCardPrice){
            params += "&cashBuyCardPrice=" + cashBuyCardPrice*100;
        }
        if(posBuyCardPrice){
            params += "&posBuyCardPrice=" + posBuyCardPrice*100;
        }
        if(remark){
            params += "&remark=" + remark;
        }
        jQuery.ajax( {
            url : "/sales/insert",
            type : "post",
            dataType : "json",
            data : params,
            success : function(data) {
                if (data.success == true) {
                    alert("添加成功！");
                    window.location.href="/sales/index";
                }else{
                    alert("系统异常！请重试");
                }
            },
            error : function() {
                alert("系统超时！请重试");
            }
        });
    }
</script>
#parse("/WEB-INF/vm/common/bottom.vm")