#set($title="查看所有商品")
#set($menu=2)
#parse("/WEB-INF/vm/common/head.vm")
<div class="container">
    #parse("/WEB-INF/vm/common/top.vm")
    <div class="row">&nbsp;</div>
    <div class="row">
        <form id="f1" name="f1" method="post">
            <input type="hidden" value="$!resultMap.item.index" name="pageNo" id="pageNo" />
            <div class="input-group col-xs-7">
                <input id="itemName" name="itemName" type="text" value="$!resultMap.item.itemName" class="form-control dropdown-toggle " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
                <ul id="itemNameList" class="dropdown-menu">
                </ul>
                <div class="input-group-btn">
                    <button type="button" onclick="search(1)" id="searchButton" class="btn btn-default">
                        查询商品
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="row">&nbsp;</div>

    <div class="row">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>商品名称</th>
                <th>参考进价</th>
                <th>参考售价</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
                #foreach($detail in $!resultMap.itemList)
                    <tr>
                        <td>$!detail.itemName</td>
                        <td>
                            <input id="referenceStockPrice$!detail.itemId" type="number" style="width: 70px;" value="$!bigDecimalUtils.intDivide100ToBigDecimal($!detail.referenceStockPrice)" />
                            /
                            <select name="referenceUnit$!detail.itemId" id="referenceUnit$!detail.itemId">
                                <option value="1" #if($!detail.referenceUnit==1)selected="selected"#end>斤</option>
                                <option value="2" #if($!detail.referenceUnit==2)selected="selected"#end>个</option>
                                <option value="3" #if($!detail.referenceUnit==3)selected="selected"#end>箱</option>
                                <option value="4" #if($!detail.referenceUnit==4)selected="selected"#end>袋</option>
                                <option value="5" #if($!detail.referenceUnit==5)selected="selected"#end>盒</option>
                            </select>
                        </td>
                        <td>
                            <input id="referenceSellPrice$!detail.itemId" type="number" style="width: 70px;" value="$!bigDecimalUtils.intDivide100ToBigDecimal($!detail.referenceSellPrice)" />
                            /
                            <select name="unit$!detail.itemId" id="unit$!detail.itemId">
                                <option value="1" #if($!detail.unit==1)selected="selected"#end>斤</option>
                                <option value="2" #if($!detail.unit==2)selected="selected"#end>个</option>
                                <option value="3" #if($!detail.unit==3)selected="selected"#end>箱</option>
                                <option value="4" #if($!detail.unit==4)selected="selected"#end>袋</option>
                                <option value="5" #if($!detail.unit==5)selected="selected"#end>盒</option>
                            </select>
                        </td>
                        <td>
                            <button class="btn btn-default btn-sm" onclick="update($!detail.itemId)" type="button">
                                修改
                            </button>
                        </td>
                    </tr>
                #end
            </tbody>
        </table>
        <nav>
            <ul class="pagination">
                #if($!resultMap.itemList.previousPageAvailable) ##如果能向上翻页
                    <li><a href="javascript:search($!resultMap.itemList.previousPage);">上一页</a></li>
                #end

                <li class="active"><a href="#">$!resultMap.itemList.index</a></li>
                #if($!resultMap.itemList.nextPageAvailable) ##显示后面的页
                    <li><a href="javascript:search($!resultMap.itemList.nextPage);" >下一页</a></li>
                #end
            </ul>
        </nav>
    </div>
</div>
<script type="application/javascript">

    $("#itemName").keyup(function(){
        var itemName = $("#itemName").val();
        if(!itemName){
            $("#itemNameList").html("");
            return;
        }
        jQuery.ajax( {
            url : "/purchaseTemplateItem/vagueQuery",
            type : "post",
            dataType : "json",
            data : "itemName="+$("#itemName").val(),
            success : function(data) {
                if (data.success == true) {
                    var list = "";
                    data.result.forEach(function(e){
                        list += '<li><a href="#" onclick="clickIt(\''+e+'\');">'+e+'</a></li>';
                    })

                    $("#itemNameList").html(list);
                }else{
                    alert("系统异常！请重试");
                }
            },
            error : function() {
                alert("系统超时！请重试");
            }
        });

    });


    function clickIt(itemName){
        $("#itemName").val(itemName);
    }

    function search(index){
        $("#pageNo").val(index);
        $("#f1").attr("action", "/product/itemList");
        $("#f1").attr("method", "post");
        $("#f1").submit();
    }

    function update(id){
        var referenceStockPrice = $("#referenceStockPrice"+id).val();
        var referenceSellPrice = $("#referenceSellPrice"+id).val();
        var unit = $("#unit"+id).val();
        var referenceUnit = $("#referenceUnit"+id).val();
        if(!referenceStockPrice){
            alert("参考进价不能为空！");
            return;
        }
        if(!referenceSellPrice){
            alert("参考售价不能为空！");
            return;
        }

        jQuery.ajax( {
            url : "/product/updateReference",
            type : "post",
            dataType : "json",
            data : "itemId="+id+"&referenceStockPrice="+referenceStockPrice+"&referenceSellPrice="+referenceSellPrice+"&unit="+unit+"&referenceUnit="+referenceUnit,
            success : function(data) {
                if (data.success == true) {
                    alert("修改成功");
                    window.location.reload();
                }else{
                    alert(data.resultMessage);
                }
            },
            error : function() {
                alert("系统超时！请重试");
            }
        });
    }

</script>
#parse("/WEB-INF/vm/common/bottom.vm")