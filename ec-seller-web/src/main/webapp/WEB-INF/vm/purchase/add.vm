<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <meta content="就是看看bootstrap" name="description">
    <meta content="缤纷果园 鲜果味道" name="keywords">
    <title>添加采购单</title>
    <link rel="stylesheet" href="//cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="//cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
    <script src="//cdn.bootcss.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="span6">
            <ul class="nav nav-tabs">
                <li class="dropdown active"><a class="dropdown-toggle" data-toggle="dropdown" href="#">采购管理<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="/purchase/index">查看采购单</a></li>
                        <li class="divider"></li>
                        <li><a href="/purchaseTemplate/index">查看采购单模板</a></li>
                    </ul>
                </li>
                <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">商品管理<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="/product/itemList">查看所有商品</a></li>
                    </ul>
                </li>
                <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">结算管理<b class="caret bottom-up"></b></a>
                    <ul class="dropdown-menu bottom-up pull-right">
                        <li><a href="#">日结算单</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">采购日期</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="purchaseTime">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">采购地点</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="purchasePlace">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" onclick="doSubmit();" class="btn btn-default">提交</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="application/javascript">
    function doSubmit(){
        var purchaseTime = $("#purchaseTime").val();
        var purchasePlace = $("#purchasePlace").val();
        if(!purchaseTime){
            alert("采购日期不能为空");
            return;
        }
        if(!purchasePlace){
            alert("采购地点不能为空");
            return;
        }
        jQuery.ajax( {
            url : "/purchase/insert",
            type : "post",
            dataType : "json",
            data : "date="+purchaseTime+"&purchasePlace="+purchasePlace,
            success : function(data) {
                if (data.success == true) {
                    window.location.href="/purchase/index";
                }else{
                    alert("系统异常！请重试");
                }
            },
            error : function() {
                alert("系统超时！请重试");
            }
        });
    }
</script>
</body>
</html>