<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <meta content="就是看看bootstrap" name="description">
    <meta content="缤纷果园 鲜果味道" name="keywords">
    <title>采购单管理</title>
    <link rel="stylesheet" href="//cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="//cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
    <script src="//cdn.bootcss.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="span6">
            <ul class="nav nav-tabs">
                <li class="dropdown active"><a class="dropdown-toggle" data-toggle="dropdown" href="#">采购管理<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="/purchase/index">查看采购单</a></li>
                        <li class="divider"></li>
                        <li><a href="/purchaseTemplate/index">查看采购单模板</a></li>
                    </ul>
                </li>
                <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">商品管理<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="/product/itemList">查看所有商品</a></li>
                    </ul>
                </li>
                <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">结算管理<b class="caret bottom-up"></b></a>
                    <ul class="dropdown-menu bottom-up pull-right">
                        <li><a href="#">日结算单</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>

    <form class="form-horizontal">
        <div class="row">&nbsp;</div>
        <div class="input-group col-xs-7">
            <input id="itemName" type="text" class="form-control dropdown-toggle " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
            <ul id="itemNameList" class="dropdown-menu">
            </ul>
            <div class="input-group-btn">
                <button type="button" id="insert" class="btn btn-default">
                    新增商品
                </button>
            </div>
        </div>
        <div class="row">&nbsp;</div>

        <div class="form-group">
            <label class="col-sm-2 control-label">采购人姓名：</label>
            <div class="col-sm-10">
                <p class="form-control-static">$!purchase.purchaseName</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">采购地点：</label>
            <div class="col-sm-10">
                <p class="form-control-static">$!purchase.purchasePlace</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">当前状态：</label>
            <div class="col-sm-10">
                <p class="form-control-static">#if($!purchase.status==0)采购中 #else 采购完成#end</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">采购总金额：</label>
            <div class="col-sm-10">
                <p class="form-control-static">$!purchase.totalPrice</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">采购日期：</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" value='$!dateFormatUtils.format($!{purchase.purchaseTime}, "yyyy-MM-dd")' id="purchaseTime">
            </div>
        </div>

        <div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label">其他费用：</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" value='$!purchase.purchasePrice' id="purchasePrice">
            </div>
        </div>

        <div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label">费用明细：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value='$!purchase.purchasePriceDetail' id="purchasePriceDetail">
            </div>
        </div>

        <div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label">采购备注：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value='$!purchase.remark' id="remark">
            </div>
        </div>
        #if($!purchase.status==0)
            <div class="form-group">
                <label for="inputPassword" class="col-sm-2 control-label"><button type="button" id="updatePurchaseButton" class="btn btn-default">采购完成</button></label>
            </div>
        #end
    </form>

    <div class="row">&nbsp;</div>
    <div class="row">
        <table class="table table-striped">
            <thead>
            <tr>
                <th width="16%">商品</th>
                <th width="18%">参考价</th>
                <th width="18%">进货数量</th>
                <th width="18%">进货金额</th>
                <th width="30%">操作</th>
            </tr>
            </thead>
            <tbody>
            #foreach($detail in $!purchaseItemList)
                <tr>
                    <td>$!detail.itemName</td>
                    <td>$!{detail.referenceStockPrice}/#if($!detail.referenceUnit==1)斤#elseif($!detail.referenceUnit==2)个#elseif($!detail.referenceUnit==3)箱#end</td>
                    <td><input id="num$!detail.id" type="number" style="width: 70px;" value="$!detail.num" /></td>
                    <td>
                        <input id="totalPrice$!detail.id" type="number" style="width: 70px;" value="$!detail.totalPrice" />
                    </td>
                    <td>
                        #if($!purchase.status==0)
                            <button class="btn btn-default btn-sm" onclick="update($!detail.id)" type="button">
                                修改
                            </button>

                            <button class="btn btn-default btn-sm" onclick="del($!detail.id)" type="button">
                                删除
                            </button>
                        #end
                    </td>
                </tr>
            #end
            </tbody>
        </table>
    </div>
</div>
</body>

<script type="application/javascript">

    $("#updatePurchaseButton").click(function(){
        var purchaseTime = $("#purchaseTime").val();
        var purchasePrice = $("#purchasePrice").val();
        var purchasePriceDetail = $("#purchasePriceDetail").val();
        var remark = $("#remark").val();
        var params = "id="+$!purchase.id;
        if(purchaseTime){
            params += "&purchaseDate="+purchaseTime;
        }
        if(purchasePrice){
            params += "&purchasePrice="+purchasePrice;
        }
        if(purchasePriceDetail){
            params += "&purchasePriceDetail="+purchasePriceDetail;
        }
        if(remark){
            params += "&remark="+remark;
        }


        jQuery.ajax( {
            url : "/purchase/update",
            type : "post",
            dataType : "json",
            data : params,
            success : function(data) {
                if (data.success == true) {
                    alert("修改成功！");
                    window.location.reload(true);
                }else{
                    alert(data.resultMessage);
                }
            },
            error : function() {
                alert("系统超时！请重试");
            }
        });
    });

    $("#itemName").keyup(function(){
        var itemName = $("#itemName").val();
        if(!itemName){
            $("#itemNameList").html("");
            return;
        }
        jQuery.ajax( {
            url : "/purchaseTemplateItem/vagueQuery",
            type : "post",
            dataType : "json",
            data : "purchaseTemplateId=$!{purchaseTemplateItem.id}&itemName="+$("#itemName").val(),
            success : function(data) {
                if (data.success == true) {
                    var list = "";
                    data.result.forEach(function(e){
                        list += '<li><a href="#" onclick="clickIt(\''+e+'\');">'+e+'</a></li>';
                    })

                    $("#itemNameList").html(list);
                }else{
                    alert("系统异常！请重试");
                }
            },
            error : function() {
                alert("系统超时！请重试");
            }
        });

    });


    function clickIt(itemName){
        $("#itemName").val(itemName);
    }

    $("#insert").click(function(){
        if(!$("#itemName").val()){
            alert("请输入商品名称");
            return;
        }
        jQuery.ajax( {
            url : "/purchaseItem/insert",
            type : "post",
            dataType : "json",
            data : "itemName="+$("#itemName").val()+"&purchaseId="+$!purchase.id,
            success : function(data) {
                if (data.success == true) {
                    window.location.reload();
                }else{
                    alert(data.resultMessage);
                }
            },
            error : function() {
                alert("系统超时！请重试");
            }
        });
    });

    function update(id){
        var num = $("#num"+id).val();
        var totalPrice = $("#totalPrice"+id).val();
        if(!num || num == 0){
            alert("进货数量不能为空！");
            return;
        }
        if(!totalPrice || totalPrice == 0){
            alert("进货金额不能为空！");
            return;
        }

        jQuery.ajax( {
            url : "/purchaseItem/update",
            type : "post",
            dataType : "json",
            data : "id="+id+"&num="+num+"&totalPrice="+totalPrice,
            success : function(data) {
                if (data.success == true) {
                    window.location.reload();
                }else{
                    alert(data.resultMessage);
                }
            },
            error : function() {
                alert("系统超时！请重试");
            }
        });
    }

    function del(id){
        if(confirm("确认要删除吗？")){
            jQuery.ajax( {
                url : "/purchaseItem/delete",
                type : "post",
                dataType : "json",
                data : "id="+id,
                success : function(data) {
                    if (data.success == true) {
                        window.location.reload();
                    }else{
                        alert(data.resultMessage);
                    }
                },
                error : function() {
                    alert("系统超时！请重试");
                }
            });
        }
    }
</script>
</html>