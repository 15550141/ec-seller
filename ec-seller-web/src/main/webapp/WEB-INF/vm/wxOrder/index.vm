<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<meta http-equiv="expires" content="0" />
		<meta http-equiv="pragma" content="no-cache" />
		<meta http-equiv="cache-control" content="no-cache, must-revalidate" />
    	<meta http-equiv="expires" content="0" />
        <title>微信支付</title>
        <script language="javascript" src="/js/jquery-1.6.2.min.js"></script>
		<script language="javascript" src="/js/jquery.simplemodal.js"></script>
		<script language="javascript" src="/My97DatePicker/WdatePicker.js"></script> 
		
		<link type="text/css" rel="stylesheet" href="/misc/css/admin.css">
		<link type='text/css' rel="stylesheet" href='/misc/css/basic1.css'/>
</head>
<body>
<!--盒子开始-->
<form id="f1" name="f1" method="post">
<div class="box"> 
    <!--标题区开始-->
    <div class="title">
        <div class="left">
            <div class="title_gl">微信支付</div>
            <div class="title_fbt"></div>
            <div class="bh"></div>
        </div>
    </div>
    <!--标题区结束-->
    <!--查询区开始-->
    
    <div class="panel_search">
    	<table border="0" cellpadding="0" cellspacing="2">
            <tr>
                <td align="right" style="width:100px">
                    操作人：
                </td>
                <td align="left" style="width:100px">
                    <input type="text" name="userName" maxlength="30" id="userName" value="$!{query.userName}"/>
                </td>
				<td align="right" style="width:100px">
                	下单时间：
                </td>
                 <td align="left" style="width:250px">
                	<input type="text" id="startTime" name="startTime" value="$!{dateFormatUtils.format($!query.startTime)}" onClick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})" />至
                	<input type="text" id="endTime" name="endTime" value="$!{dateFormatUtils.format($!query.endTime)}" onClick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})" />
				</td>
            </tr>
            <tr>
                <td align="right" style="width:100px">
					新建订单，输入订单金额：
                </td>
                <td align="left" style="width:100px">
                    <input type="text" id="price" name="price" value=""  />
                    <input type="button" onclick="addWxOrder();" value="添加" />
				</td>
				<td></td>
				<td><input type="submit" value="查询" /></td>
            </tr>
			
        </table>
    </div>
    <!--查询区结束--> 
    <!--列表区开始--><!--
    <div>
        <input type="checkbox" name="selectAll" value="checkbox"/> 全选  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <input type="button" id="query" name="query" value="批量下架"/>
    </div>
    --><br />
    <div class="panel_grid">
        <table>
            <tr>
                <th>店铺信息</th>
                <th>订单号</th>
                <th>订单总金额</th>
                <th>操作人</th>
                <th>时间</th>
                <th>支付状态</th>
				<th>操作</th>
            </tr>
            
            #foreach($order in $list)
				<tr>
					<td>$!order.deviceInfo</td>
					<td>$!order.orderId</td>
					<td>$!order.totalFeePrice</td>
					<td>$!order.userName</td>
					<td>$!{dateFormatUtils.format($order.created, "yyyy-MM-dd HH:mm:ss")}</td>
                    <td>#if($!order.status == 1)
                        未支付
                        #elseif($!order.status == 2)
                        支付成功
                        #end
                    </td>
					<td>&nbsp;</td>
				</tr>
			#end
        </table>
        <!--分页控件开始-->
        <div class="pager">
			#set($pageModule = $mainModule.getTarget("/wxOrder/index").addQueryData("orderId",$!{query.orderId}).addQueryData("orderType",$!{query.orderType}).addQueryData("priceEnd",$!{query.priceEnd}).addQueryData("priceStart",$!{query.priceStart}).addQueryData("startTime",$!{dateFormatUtils.format($!query.startTime)}).addQueryData("endTime",$!{dateFormatUtils.format($!query.endTime)}).addQueryData("pageSize",$!{dateFormatUtils.format($!query.pageSize)}))
			#showPage($pageModule $list)
        </div>
        <!--分页控件结束--> 
    </div>
    <!--列表区结束--> 
</div>
	<input type="hidden" value="$!deviceInfo" id="deviceInfo" />
<!--盒子结束--> 
</form>
<div id="addDialog" style="width: 95%; display:none;">
<div id="addDialog2" style="width: 95%; display:none;">
			
</div>	

<script type="text/javascript">
	function authCode(orderId){
	  jQuery.get("/wxOrder/authCode?orderId="+orderId, function(result){
        $("#addDialog2").html(result);
      });
  
		$('#addDialog2').modal({
		});
		return;
	};

    function addWxOrder(){
        var price = $("#price").val();
        if(!price || price == 0){
            alert("微信支付金额不能为空");
            return;
        }
        $.ajax({
            type : "post",
            url : "/wxOrder/insert",
            data : "price="+price+"&deviceInfo="+$("#deviceInfo").val(),
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            dataType: "json",
            success : function(data) {
                if(data.success){
                    authCode(data.result.orderId);
                }else{
                    alert(data.resultMessage);
                }
            }
        });
    };

</script>
 </body>
</html>
